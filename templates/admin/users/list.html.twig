{% extends 'base.html.twig' %}

{% block body %}
    <nav class="container">
        <h1 class="nav-title">ğŸ› ï¸ Admin Dashboard</h1>
    </nav>

    <main class="container">

    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">ğŸ‘¥ Users Management</h1>
        <div class="actions-group">
            <a href="{{ path('admin_users_add') }}" role="button">â• Add New User</a>
            <a href="{{ path('admin_dashboard') }}" role="button" class="secondary outline">â† Back to Dashboard</a>
        </div>
    </div>
    <hr>

    <!-- Statistics Info -->
    <div class="stats-info">
        <strong>Total Users: {{ usersCount }}</strong>
        {% if users is defined and users|length > 0 %}
            {% set activeUsers = users|filter(u => u.active == true)|length %}
            <small style="color: #6c757d; margin-left: 1rem;">
                Active: {{ activeUsers }} | Inactive: {{ users|length - activeUsers }}
            </small>
        {% endif %}
    </div>

    <!-- Users Table -->
    <article>
        <header>
            <h2>Users List</h2>
        </header>

        {% if users is defined and users|length > 0 %}
            <div class="table-container">
                <table>
                    <thead>
                    <tr>
                        <th scope="col">User</th>
                        <th scope="col">Email</th>
                        <th scope="col">Campus</th>
                        <th scope="col">Role</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>
                                <div class="user-info">
                                    <div class="user-avatar">
                                        {{ (user.firstname|first|upper) ~ (user.lastname|first|upper) }}
                                    </div>
                                    <div class="user-details">
                                        <div class="user-name">{{ user.firstname }} {{ user.lastname }}</div>
                                        <div class="user-email">{{ user.username ?? 'N/A' }}</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <a href="mailto:{{ user.email }}">{{ user.email }}</a>
                            </td>
                            <td>
                                {{ user.campus.name ?? 'Not Assigned' }}
                            </td>
                            <td>
                                        <span class="role-badge">
                                            {{ user.roles|join(', ')|default('User') }}
                                        </span>
                            </td>
                            <td>
                                        <span class="status-badge {{ user.active ? 'status-active' : 'status-inactive' }}">
                                            {{ user.active ? 'Active' : 'Inactive' }}
                                            <a href="{{ user.active ? path('admin_users_deactivate', {'id': user.id}) : path('admin_users_activate', {'id': user.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 1.56 1.56" xml:space="preserve"><path d="M1.455.06h-.09a.045.045 0 0 0-.045.045v.21c0 .027-.03.045-.048.024A.66.66 0 0 0 .711.123a.6.6 0 0 0-.222.066.6.6 0 0 0-.102.063C.366.267.363.3.381.321l.063.063A.045.045 0 0 0 .501.39Q.555.354.618.327l.06-.018a.5.5 0 0 1 .471.162c.036.042.009.069-.021.069h-.21C.894.54.87.561.87.585v.09C.87.699.894.72.918.72h.546C1.485.72 1.5.702 1.5.681V.105A.045.045 0 0 0 1.455.06m-.273 1.062a.043.043 0 0 0-.063 0 .5.5 0 0 1-.234.129.5.5 0 0 1-.471-.162C.378 1.047.405 1.02.435 1.02h.21A.046.046 0 0 0 .69.975v-.09A.045.045 0 0 0 .645.84H.099A.04.04 0 0 0 .06.879v.576c0 .024.021.045.045.045h.09a.046.046 0 0 0 .045-.045v-.21c0-.027.03-.045.048-.024a.656.656 0 0 0 .954.027c.018-.018.018-.048 0-.063z"/></svg></a>
                                        </span>
                            </td>
                            <td>
                                <div class="table-actions">
                                    <a href="{{ path('admin_users_modify', {'id': user.id}) }}"
                                       class="btn-edit"
                                       title="Edit {{ user.firstname }} {{ user.lastname }}">
                                        âœï¸ Edit
                                    </a>
                                    <a href="{{ path('admin_users_delete', {'id': user.id}) }}"
                                       class="btn-delete"
                                       title="Delete {{ user.firstname }} {{ user.lastname }}"
                                       onclick="return confirm('Are you sure you want to delete {{ user.firstname }} {{ user.lastname }}?')">
                                        ğŸ—‘ï¸ Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <!-- Empty State -->
            <div class="empty-state">
                <h3>No users found</h3>
                <p>You haven't added any users yet. Start by adding your first user or importing from CSV.</p>
                <div style="margin-top: 1rem;">
                    <a href="{{ path('admin_users_add') }}" role="button">â• Add Your First User</a>
                </div>
            </div>
        {% endif %}
    </article>

    <!-- Additional Actions -->
    <section style="margin-top: 2rem;">
        <div class="grid">
            <a href="{{ path('admin_users_add') }}" role="button" class="outline">
                â• Add Another User
            </a>
            <a href="{{ path('admin_cities_list') }}" role="button" class="secondary outline">
                ğŸ™ï¸ Manage Cities
            </a>
            <a href="{{ path('admin_campus_list') }}" role="button" class="contrast outline">
                ğŸ“ Manage Campus
            </a>
        </div>
    </section>
{% endblock %}