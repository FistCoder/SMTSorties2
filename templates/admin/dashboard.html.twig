{% extends 'base.html.twig' %}

{% block body %}
    <div class="hero-section">
        <h1>Welcome to the Admin Panel</h1>
        <p>Manage your cities, campus locations, and users from this central dashboard</p>
    </div>

    <!-- Statistics Overview -->
    <section>
        <h2>üìä Statistics Overview</h2>
        <div class="stats-grid">
            <article class="stat-card">
                <span class="stat-number">{{ citiesCount ?? '0' }}</span>
                <div class="stat-label">Total Cities</div>
            </article>
            <article class="stat-card">
                <span class="stat-number">{{ campusesCount ?? '0' }}</span>
                <div class="stat-label">Campus Locations</div>
            </article>
            <article class="stat-card">
                <span class="stat-number">{{ usersCount ?? '0' }}</span>
                <div class="stat-label">Registered Users</div>
            </article>
        </div>
    </section>

    <!-- Main Management Sections -->
    <section>
        <h2>Management Sections</h2>
        <div class="dashboard-grid">
            <!-- Cities Management -->
            <article>
                <header>
                    <h3>üèôÔ∏è Cities Management</h3>
                </header>
                <div class="card-actions">
                    <a href="{{ path('admin_cities_list') }}" role="button" class="outline">
                        üìã View All Cities
                    </a>
                    <a href="{{ path('admin_cities_add') }}" role="button">
                        ‚ûï Add New City
                    </a>
                </div>
                <div class="card-description">
                    Manage city locations and their associated data. Add new cities or modify existing ones.
                </div>
            </article>

            <!-- Campus Management -->
            <article>
                <header>
                    <h3>üéì Campus Management</h3>
                </header>
                <div class="card-actions">
                    <a href="{{ path('admin_campus_list') }}" role="button" class="outline">
                        üìã View All Campus
                    </a>
                    <a href="{{ path('admin_campus_add') }}" role="button">
                        ‚ûï Add New Campus
                    </a>
                </div>
                <div class="card-description">
                    Manage campus locations and facilities. Configure campus settings and locations.
                </div>
            </article>

            <!-- Users Management -->
            <article>
                <header>
                    <h3>üë• Users Management</h3>
                </header>
                <div class="card-actions">
                    <a href="{{ path('admin_users_list') }}" role="button" class="outline">
                        üìã View All Users
                    </a>
                    <a href="{{ path('admin_users_add') }}" role="button">
                        ‚ûï Add New User
                    </a>
                </div>
                <div class="card-description">
                    Manage user accounts, permissions, and profile information. Add users individually or via CSV import.
                </div>
            </article>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    <style>
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .stat-card {
            text-align: center;
            padding: 1rem;
            background: var(--background-color);
            border-radius: var(--border-radius);
            border: 1px solid var(--muted-border-color);
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
            color: var(--primary);
            display: block;
            line-height: 1;
        }

        .stat-label {
            color: var(--muted-color);
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        .card-actions {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .card-description {
            font-size: 0.875rem;
            color: var(--muted-color);
            margin-top: 1rem;
        }

        .hero-section {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
            padding: 2rem;
            border-radius: var(--border-radius);
            text-align: center;
            margin-bottom: 2rem;
        }

        .hero-section h1 {
            margin-bottom: 0.5rem;
        }

        .overview-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
            margin-top: 1rem;
        }

        .overview-item {
            padding: 1rem;
            background: var(--card-background-color);
            border-radius: var(--border-radius);
            border-left: 4px solid var(--primary);
        }

        .overview-item strong {
            color: var(--primary);
        }

        .overview-item small {
            color: var(--muted-color);
        }

        nav {
            background: var(--background-color);
            border-bottom: 1px solid var(--muted-border-color);
            padding: 1rem 0;
        }

        .nav-title {
            margin: 0;
            color: var(--primary);
            font-size: 1.5rem;
        }
    </style>
{% endblock %}

